<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="edu.niu.cs.z1779946.quiz240.InsertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Quiz No"
            style="@style/textView_style"
            android:id="@+id/textView3" />

        <EditText
            style="@style/editText_Signup_style"
            android:layout_width="match_parent"
            android:inputType="number"
            android:id="@+id/quizNoEditText"
            android:hint="Quiz number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textView_style"
            android:text="Question"
            android:id="@+id/textView" />

        <EditText
            android:layout_width="match_parent"
            style="@style/editText_Signup_style"
            android:layout_height="80dp"
            android:inputType="textMultiLine"
            android:id="@+id/questionEditText"
            android:hint="Question" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/textView_style"
            android:text=" Options\n(as many)"
            android:layout_gravity="center"
            android:id="@+id/textView2" />

        <EditText
            android:layout_width="match_parent"
            style="@style/editText_Signup_style"
            android:hint="Option 1"
            android:id="@+id/option1EditText"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp">

        <EditText
            style="@style/editText_Signup_style"
            android:layout_width="match_parent"
            android:hint="Option 2"
            android:id="@+id/option2EditText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp">

        <EditText
            style="@style/editText_Signup_style"
            android:layout_width="match_parent"
            android:hint="Option 3"
            android:id="@+id/option3EditText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp">

        <EditText
            style="@style/editText_Signup_style"
            android:layout_width="match_parent"
            android:hint="Option 4"
            android:id="@+id/option4EditText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/textView_style"
            android:text="Answer"
            android:layout_gravity="center"
            android:id="@+id/textView4" />

        <EditText
            style="@style/editText_Signup_style"
            android:hint="Answer"
            android:layout_width="match_parent"
            android:id="@+id/answerEditText"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            style="@style/button_style"
            android:text="Add"
            android:layout_weight="1"
            android:onClick="insertQuestion"/>

        <Button
            style="@style/button_style"
            android:text="Cancel"
            android:layout_weight="1"
            android:onClick="back"/>

    </LinearLayout>
</LinearLayout>
