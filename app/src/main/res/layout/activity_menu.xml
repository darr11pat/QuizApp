<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/NIU_GREY"
    tools:context="edu.niu.cs.z1779946.quiz240.MenuActivity">

    <TextView
        android:id="@+id/editText"
        android:layout_height="40dp"
        android:textAlignment="center"
        style="@style/editText_style"
        android:inputType="textPersonName"
        android:text="Quiz Category"
        android:textSize="30dp"
        android:textColor="@color/NIU_RED"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/button_style1"
            android:id="@+id/quiz1Button"
            android:onClick="quizOnClick"
            android:textColor="@color/NIU_BLACK"
            android:text="QUIZ 1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/button_style2"
            android:onClick="quizOnClick"
            android:id="@+id/quiz2Button"
            android:text="QUIZ 2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/button_style1"
            android:id="@+id/quiz3Button"
            android:onClick="quizOnClick"
            android:textColor="@color/NIU_BLACK"
            android:text="QUIZ 3"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/button_style2"
            android:onClick="quizOnClick"
            android:id="@+id/quiz4Button"
            android:text="QUIZ 4"/>

    </LinearLayout>
</LinearLayout>
