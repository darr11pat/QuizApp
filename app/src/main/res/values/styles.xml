<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editText_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittext_design</item>
        <item name="android:ems">10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="radioButton_Signup_style">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="editText_Signup_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FDFDFE</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ems">10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_style</item>
    </style>

    <style name="button_style1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#FDFDFE</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ems">10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_style1</item>
    </style>

    <style name="button_style2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#FDFDFE</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ems">10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_style2</item>
    </style>


    <style name="textView_style">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#969EB1</item>

    </style>

    <style name="questionsTextView_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/qtextview_design</item>
        <item name="android:ems">10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>



</resources>
